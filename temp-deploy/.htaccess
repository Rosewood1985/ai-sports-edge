RewriteEngine On
RewriteRule ^test$ test.html [L]

# ===== URL Canonicalization Rules =====
# These rules ensure consistent URLs by redirecting alternative versions to canonical ones

# Only process these rules for GET and HEAD requests
RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_METHOD} ^(GET|HEAD)$ [NC]

# Redirect index.html to root URL
RewriteCond %{REQUEST_URI} ^/index\.html/?$ [NC]
RewriteRule ^index\.html/?$ / [R=301,L,QSA,E=REDIRECT:URI]

# Redirect old /deploy path to root
RewriteCond %{REQUEST_URI} ^/deploy/?$ [NC]
RewriteRule ^deploy/?$ / [R=301,L,QSA,E=REDIRECT:URI]

# ===== Clean URLs =====
# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# ===== Static Asset Caching =====
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresDefault "access plus 1 month"
</IfModule>

# ===== Security Headers =====
<IfModule mod_headers.c>
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ===== Prevent Directory Listing =====
Options -Indexes

# ===== Gzip Compression =====
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

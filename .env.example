# AI Sports Edge Environment Variables

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# API Keys
ODDS_API_KEY=your-odds-api-key
WEATHER_API_KEY=your-weather-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
FANDUEL_AFFILIATE_ID=your-fanduel-affiliate-id
FANDUEL_API_KEY=your-fanduel-api-key
SPORTRADAR_API_KEY=your-sportradar-api-key
NCAA_BASKETBALL_API_KEY=your-ncaa-basketball-api-key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# App Configuration
APP_ENV=development # development, staging, production
API_BASE_URL=http://localhost:3000/api
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_REMOTE_CONFIG=true

# Feature Flags
ENABLE_BETTING=true
ENABLE_SOCIAL_SHARING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_IN_APP_PURCHASES=true
ENABLE_DARK_MODE=true
ENABLE_LANGUAGE_SELECTION=true

# Logging
LOG_LEVEL=info # debug, info, warn, error

# Cache Configuration
CACHE_TTL=3600 # seconds
ENABLE_OFFLINE_CACHE=true
# Stripe Firebase Extension Configuration
# Fill in these values in the Firebase Console when installing the extension

# Stripe API Keys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Extension Configuration
CUSTOMERS_COLLECTION=customers
PRODUCTS_COLLECTION=products
SYNC_USERS_ON_CREATE=true
DELETE_STRIPE_CUSTOMERS_ON_USER_DELETE=false

# Tax Configuration (Optional)
AUTOMATIC_TAX_SUPPORTED_COUNTRIES=US,CA
TAX_RATES_COLLECTION=tax_rates

# Email Configuration (Optional)
SMTP_CONNECTION_URI=your_smtp_connection_uri_here
EMAIL_TEMPLATES_COLLECTION=mail

# Advanced Settings
SYNC_NEW_USERS_TO_STRIPE=true
STRIPE_CONFIGURATION_COLLECTION=stripe_config
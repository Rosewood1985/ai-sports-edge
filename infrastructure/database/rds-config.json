{
  "DBInstance": {
    "DBInstanceIdentifier": "ai-sports-edge-production",
    "DBInstanceClass": "db.r5.xlarge",
    "Engine": "postgres",
    "EngineVersion": "13.7",
    "MasterUsername": "dbadmin",
    "MasterUserPassword": "{{DB_PASSWORD}}",
    "AllocatedStorage": 100,
    "MaxAllocatedStorage": 1000,
    "StorageType": "gp3",
    "Iops": 3000,
    "StorageThroughput": 125,
    "MultiAZ": true,
    "PubliclyAccessible": false,
    "AutoMinorVersionUpgrade": true,
    "BackupRetentionPeriod": 7,
    "PreferredBackupWindow": "03:00-05:00",
    "PreferredMaintenanceWindow": "sun:05:00-sun:07:00",
    "Port": 5432,
    "DBParameterGroupName": "ai-sports-edge-params",
    "OptionGroupName": "default:postgres-13",
    "VpcSecurityGroupIds": ["sg-XXXXXXXXXXXXXXXXX"],
    "DBSubnetGroupName": "ai-sports-edge-subnet-group",
    "EnableIAMDatabaseAuthentication": true,
    "EnablePerformanceInsights": true,
    "PerformanceInsightsRetentionPeriod": 7,
    "DeletionProtection": true,
    "CopyTagsToSnapshot": true,
    "MonitoringInterval": 60,
    "MonitoringRoleArn": "arn:aws:iam::XXXXXXXXXXXX:role/rds-monitoring-role",
    "EnableCloudwatchLogsExports": [
      "postgresql",
      "upgrade"
    ],
    "Tags": [
      {
        "Key": "Environment",
        "Value": "Production"
      },
      {
        "Key": "Project",
        "Value": "AISportsEdge"
      }
    ]
  },
  "DBParameterGroup": {
    "DBParameterGroupName": "ai-sports-edge-params",
    "DBParameterGroupFamily": "postgres13",
    "Description": "Custom parameter group for AI Sports Edge production database",
    "Parameters": {
      "shared_buffers": "8GB",
      "effective_cache_size": "24GB",
      "maintenance_work_mem": "2GB",
      "work_mem": "50MB",
      "max_connections": "500",
      "max_worker_processes": "8",
      "max_parallel_workers_per_gather": "4",
      "max_parallel_workers": "8",
      "random_page_cost": "1.1",
      "effective_io_concurrency": "200",
      "checkpoint_timeout": "15min",
      "checkpoint_completion_target": "0.9",
      "autovacuum": "on",
      "log_min_duration_statement": "1000",
      "log_connections": "on",
      "log_disconnections": "on",
      "log_duration": "on",
      "log_lock_waits": "on",
      "log_temp_files": "0",
      "log_autovacuum_min_duration": "0"
    }
  },
  "ReadReplica": {
    "DBInstanceIdentifier": "ai-sports-edge-replica",
    "DBInstanceClass": "db.r5.large",
    "SourceDBInstanceIdentifier": "ai-sports-edge-production",
    "MultiAZ": false,
    "PubliclyAccessible": false,
    "AutoMinorVersionUpgrade": true,
    "Port": 5432,
    "EnablePerformanceInsights": true,
    "PerformanceInsightsRetentionPeriod": 7,
    "MonitoringInterval": 60,
    "MonitoringRoleArn": "arn:aws:iam::XXXXXXXXXXXX:role/rds-monitoring-role",
    "EnableCloudwatchLogsExports": [
      "postgresql",
      "upgrade"
    ],
    "Tags": [
      {
        "Key": "Environment",
        "Value": "Production"
      },
      {
        "Key": "Project",
        "Value": "AISportsEdge"
      },
      {
        "Key": "Role",
        "Value": "ReadReplica"
      }
    ]
  },
  "ConnectionPooling": {
    "MinConnections": 10,
    "MaxConnections": 100,
    "IdleTimeout": 300,
    "ConnectionTimeout": 30,
    "MaxLifetime": 1800,
    "TestOnBorrow": true,
    "TestWhileIdle": true,
    "ValidationQuery": "SELECT 1"
  },
  "Monitoring": {
    "CPUUtilizationThreshold": 80,
    "FreeableMemoryThreshold": 256000000,
    "FreeStorageSpaceThreshold": 10240000000,
    "DatabaseConnectionsThreshold": 400,
    "ReadIOPSThreshold": 20000,
    "WriteIOPSThreshold": 10000,
    "ReadLatencyThreshold": 20,
    "WriteLatencyThreshold": 20,
    "DiskQueueDepthThreshold": 10,
    "ReplicaLagThreshold": 300
  }
}
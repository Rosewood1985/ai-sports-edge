{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#00F0FF",
    "statusBar.foreground": "#000000"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "right",
  "workbench.editor.tabSizingFixedMinWidth": 100,
  "workbench.editor.tabSizingFixedMaxWidth": 200,
  "workbench.editor.wrapTabs": false,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.enablePreviewFromCodeNavigation": false,
  "workbench.editor.focusRecentEditorAfterClose": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "default",
  "workbench.editor.limit.enabled": false,
  "workbench.editor.openPositioning": "right",
  "workbench.editor.restoreViewState": true,
  "workbench.editor.revealIfOpen": false,
  "workbench.editor.showIcons": true,
  "workbench.editor.splitInGroupLayout": "horizontal",
  "workbench.editor.splitSizing": "distribute",
  "workbench.editor.closeEmptyGroups": true,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.tabActionLocation": "right",
  
  // Git Configuration - Prevent Random Branch Switching
  "git.autofetch": false,
  "git.autofetchPeriod": 0,
  "git.autoRefresh": false,
  "git.autoStash": false,
  "git.confirmSync": true,
  "git.followTagsWhenSync": false,
  "git.promptToSaveFilesBeforeCommit": "always",
  "git.promptToSaveFilesBeforeStash": "always",
  "git.requireGitUserConfig": true,
  "git.showProgress": true,
  "git.suggestSmartCommit": false,
  "git.supportCancellation": true,
  "git.useCommitInputAsStashMessage": false,
  "git.useEditorAsCommitInput": false,
  "git.verboseCommit": true,
  "git.showInlineOpenFileAction": false,
  "git.alwaysSignOff": false,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.closeDiffOnOperation": true,
  "git.decorations.enabled": true,
  "git.enableSmartCommit": false,
  "git.ignoreLegacyWarning": true,
  "git.ignoreLimitWarning": true,
  "git.ignoreMissingGitWarning": true,
  "git.ignoreRebaseWarning": true,
  "git.ignoreSubmodules": true,
  "git.showActionButton": {
    "commit": false,
    "publish": false,
    "sync": false
  },
  "git.timeline.showAuthor": true,
  "git.timeline.showUncommitted": false,
  
  // Source Control Configuration
  "scm.alwaysShowActions": true,
  "scm.alwaysShowRepositories": false,
  "scm.autoReveal": false,
  "scm.countBadge": "all",
  "scm.defaultViewMode": "tree",
  "scm.inputFontFamily": "default",
  "scm.showChangesSummary": false,
  "scm.showIncomingChanges": false,
  "scm.showOutgoingChanges": false,
  
  // SFTP Configuration
  "sftp.debug": true
}
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "atomic/*": ["atomic/*"],
      "atomic/atoms/*": ["atomic/atoms/*"],
      "atomic/molecules/*": ["atomic/molecules/*"],
      "atomic/organisms/*": ["atomic/organisms/*"],
      "atomic/templates/*": ["atomic/templates/*"],
      "atomic/pages/*": ["atomic/pages/*"]
    }
  },
  "exclude": [
    "**/__tests__/**",
    "**/node_modules/**",
    "**/backups/**",
    "**/build/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx"
  ]
}
